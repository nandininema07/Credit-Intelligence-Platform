{
  "application": {
    "name": "Credit Intelligence Platform",
    "version": "1.0.0",
    "environment": "development",
    "debug": true,
    "log_level": "INFO"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "credit_intelligence",
    "user": "postgres",
    "password": "password",
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "password": null,
    "max_connections": 10
  },
  "aws": {
    "region": "us-east-1",
    "s3_bucket": "credit-intelligence-data",
    "access_key_id": null,
    "secret_access_key": null
  },
  "models": {
    "default_model": "xgboost",
    "model_path": "./models/",
    "feature_store_path": "./feature_store/",
    "batch_size": 32,
    "timeout_seconds": 300,
    "auto_retrain": true,
    "retrain_threshold": 0.05
  },
  "alerting": {
    "enabled": true,
    "notification_channels": ["email", "slack"],
    "cooldown_minutes": 60,
    "max_alerts_per_hour": 100,
    "severity_thresholds": {
      "critical": 400,
      "high": 500,
      "medium": 600,
      "low": 700
    }
  },
  "workflows": {
    "max_concurrent_workflows": 5,
    "default_timeout_minutes": 30,
    "retry_attempts": 3,
    "cleanup_completed_after_hours": 24
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "rate_limit": {
      "requests_per_minute": 100,
      "burst_size": 20
    }
  },
  "security": {
    "secret_key": "your-secret-key-here",
    "token_expiry_hours": 24,
    "encryption_enabled": true,
    "api_key_required": true
  },
  "monitoring": {
    "metrics_enabled": true,
    "health_check_interval": 60,
    "prometheus_port": 9090,
    "log_retention_days": 30
  }
}
